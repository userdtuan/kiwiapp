<p style="color: green"><%= notice %></p>

<h1>Posts</h1>


<%= button_tag 'New post', "data-bs-target"=>"#modalAdd", type: 'reset', class:"btn btn-sm btn-success", "data-bs-toggle"=>"modal" %>
<%= render 'posts/modalAdd'%>

<table class="table">
  <thead>
    <tr>
      <th scope="col">Title</th>
      <th scope="col">Description</th>
      <th scope="col">Kind</th>
      <th scope="col">Author</th>
      <th scope="col">Category</th>
      <th scope="col">Action</th>
    </tr>
  </thead>
  <tbody>
    <% @posts.each do |post| %>
    <%= render post %>
  <% end %>
  </tbody>
</table>

