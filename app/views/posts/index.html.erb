<p style="color: green"><%= notice %></p>

<h1>Posts</h1>


<%= link_to "New post", new_post_path, class:'btn btn-sm btn-success' %>

<table class="table">
  <thead>
    <tr>
      <th scope="col">Title</th>
      <th scope="col">Description</th>
      <th scope="col">Kind</th>
      <th scope="col">Author</th>
      <th scope="col">Action</th>
    </tr>
  </thead>
  <tbody>
    <% @posts.each do |post| %>
    <%= render post %>
  <% end %>
  </tbody>
</table>

