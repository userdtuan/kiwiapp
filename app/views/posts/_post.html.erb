
<% if @post %>
<div id="<%= dom_id post %>">
  <p>
    <strong>Title:</strong>
    <%= post.title %>
  </p>

  <p>
    <strong>Description:</strong>
    <%= post.description %>
  </p>

  <p>
    <strong>Kind:</strong>
    <%= post.kind %>
  </p>

  <p>
    <strong>Author:</strong>
    <%= post.author %>
  </p>

</div>
<% else %>
<tr>
  <td><%= post.title %></th>
  <td><%= post.description %></td>
  <td><%= post.kind %></td>
  <td><%= post.author %></td>
  <td>
      <%= link_to "Show", post, class:'btn btn-sm btn-secondary' %>
  </td>

</tr>
<% end %>