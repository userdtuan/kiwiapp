<div class="modal-body">
  <%= form_with(model: defined?(post) ? post : @post) do |form| %>
  <% if defined?(@post.errors.any) and @post.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(@post.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
        <% @post.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-3">
    <%= form.label :title, style: "display: block",class:"form-label" %>
    <%= form.text_field :title, class:"form-control"%>
  </div>

  <div class="mb-3">
    <%= form.label :description, style: "display: block",class:"form-label" %>
    <%= form.text_area :description, class:"form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :kind, style: "display: block",class:"form-label" %>
    <%= form.text_field :kind, class:"form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :author_id, style: "display: block",class:"form-label" %>
    <%= form.select :author_id, Author.all.collect { |c| [c.name, c.id] },{},  { class: "form form-group form-control" }%>

  </div>
  <div class="mb-3">
    <%= form.label :category_id, style: "display: block",class:"form-label" %>
    <%= form.select :category_id, Category.all.collect { |c| [c.title, c.id] },{}, { class: "form form-group form-control" }%>
  </div>
  <div class="mb-3">
    <%= form.label :status, style: "display: block",class:"form-label" %>
    <%= form.select :status, Post.statuses.keys.map {|key| [key.humanize, key]},{}, { class: "form form-group form-control" }%>
  </div>

  <div>
    
  </div>

      </div>
      <div class="modal-footer">
      <% if current_page?(posts_path) %>
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
      <% else %>
          <%= link_to "Back", posts_path, class:"btn btn-secondary" %>
      <% end %>
        <%= form.submit :class =>'btn btn-primary'%>
      </div>
