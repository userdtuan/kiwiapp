<% if @posts.length >0 %>
<p style="color: green"><%= notice %></p>
<table class="table">
  <thead>
    <tr>
      <th scope="col">Title</th>
      <th scope="col">Description</th>
      <th scope="col">Kind</th>
      <th scope="col">Author</th>
      <th scope="col">Category</th>
      <th scope="col"><%= current_page?(posts_path) ? 'Status' : nil %></th>
      <th scope="col"><%= current_page?(posts_path) ? 'Action' : nil %></th>

    </tr>
  </thead>
  <tbody>
    <% @posts.each do |post| %>
    <%= render post %>
  <% end %>
  </tbody>
</table>
<% else %>
There is no post at all !
<% end %>