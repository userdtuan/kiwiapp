<h1>Add new category</h1>
<%= form_for :category, url: categories_path do |f| %>
  <p>
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </p>
 
  <p>
    <%= f.label :description %><br>
    <%= f.text_area :description %>
  </p>

   <p>
    <%= f.label :type %><br>
    <%= f.text_field :loai %>
  </p>
 
  <p>
    <%= f.submit "Add" %>
  </p>
<% end %>
<%= link_to 'Back to HomePage', root_path %>
<h1>All categories</h1>
<% if @categories.length ==0 %>
<p>There is no title</p>
<% end %>
<p><%= notice %></p>
<% @categories.each do |el| %>
<p> <%= el.title %> | <%= el.description %> | <%= el.loai %>  <%= link_to 'Delete', category_delete_path(el.id) %> <%= link_to 'Update', category_update_path(el.id) %>
 </p>
<% end %>