<p style="color: green"><%= notice %></p>

<h1>Categories</h1>

<%= link_to "New category", new_category_path, class:'btn btn-sm btn-success' %>

<table class="table">
  <thead>
    <tr>
      <th scope="col">Title</th>
      <th scope="col">Description</th>
      <th scope="col">Type</th>
      <th scope="col">Action</th>
    </tr>
  </thead>
  <tbody>
    <% @categories.each do |category| %>
    <%= render category %>
  <% end %>
  </tbody>
</table>
