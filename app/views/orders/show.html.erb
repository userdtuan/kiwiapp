<p style="color: green"><%= notice %></p>
<h3>Order Information</h3>
<%= render @order %>
<%# <%= "length is"+@order_details.length.to_s%> 
<div>
  <%= link_to "Edit this order", edit_order_path(@order) %> |
  <%= link_to "Back to orders", orders_path %>|
  <%= link_to "New order", new_order_path %>
  <%= button_to "Destroy this order", @order, method: :delete %>
</div>
<br><br>
<h3>Cart</h3>
<div id="order_details">
  <% @order_details.each do |order_detail| %>
    <%= render "order_item", order_detail:order_detail %>
  <% end %>
</div>
  <%= button_to "Add more", order_detail_add_path(@order.id), method: :get%>
  <%= button_to "Checkout", checkout_order_path(@order.id), method: :get%>

